<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.magnet.chatsdk.sample.HomeActivity">

  <android.support.design.widget.AppBarLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:theme="@style/MagnetChatSDKTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/MagnetChatSDKTheme.PopupOverlay"
        app:titleTextAppearance="@style/MagnetChatSDKTheme.Toolbar.Title" >

    </android.support.v7.widget.Toolbar>


  </android.support.design.widget.AppBarLayout>

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/my_chats"
      android:id="@+id/btnChats"
      android:layout_centerVertical="true"
      android:layout_centerHorizontal="true"/>
  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Logout"
      android:id="@+id/btnLogout"
      android:layout_below="@+id/btnChats"
      android:layout_centerHorizontal="true"/>
</RelativeLayout>
